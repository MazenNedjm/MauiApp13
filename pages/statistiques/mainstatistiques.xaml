<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp13.pages.statistiques.mainstatistiques">
    <!---#FF0000! the main GRID -->


    <!---#FF0000! The centre content GRID  -->

    <Grid   BackgroundColor="#282828"
                  Margin="10"
             RowSpacing="1"
          ColumnSpacing="5"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.03*" />
            <RowDefinition Height="0.97*" />
        </Grid.RowDefinitions>

        <!---#FF0000! The button swiching GRID  -->

        <Grid Grid.Row="0"
                      ColumnSpacing="5"
                     Margin="1"
                      Padding="1"
             RowSpacing="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*" />
                <ColumnDefinition Width="0.19*" />
                <ColumnDefinition Width="0.19*" />
                <ColumnDefinition Width="0.19*" />
                <ColumnDefinition Width="0.19*" />
                <ColumnDefinition Width="0.19*" />
            </Grid.ColumnDefinitions>
            <Button Background="#282828" CornerRadius="10" Padding="1" Text="Verres"  Grid.Column="1"
                            MinimumHeightRequest="20"
                            
                            
                            BorderWidth="0.7"
                            >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsFocused" Value="True" >
                        <Setter Property="Background" Value="#4b4747" ></Setter>
                    </Trigger>


                </Button.Triggers>
            </Button>
            <Button Background="#282828" CornerRadius="10" Padding="1" Text="Lentilles"  Grid.Column="2"
                            MinimumHeightRequest="20"  
                            
                            BorderWidth="0.7"
                            
                            >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsFocused" Value="True" >
                        <Setter Property="Background" Value="#4b4747" ></Setter>
                    </Trigger>


                </Button.Triggers>

            </Button>
            <Button Background="#282828" CornerRadius="10" Padding="1" Text="Montures"  Grid.Column="3"
                            MinimumHeightRequest="20"  
                            
                            BorderWidth="0.7"
                            >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsFocused" Value="True" >
                        <Setter Property="Background" Value="#4b4747" ></Setter>
                    </Trigger>


                </Button.Triggers>
            </Button>
            <Button Background="#282828" CornerRadius="10" Padding="1" Text="Autres"  Grid.Column="4"
                            MinimumHeightRequest="20"  
                             
                            BorderWidth="0.7"
                            >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsFocused" Value="True" >
                        <Setter Property="Background" Value="#4b4747" ></Setter>
                    </Trigger>


                </Button.Triggers>
            </Button>

        </Grid>


        <VerticalStackLayout Grid.Row="1">
            <!---#FF0000! The centent for lists of(cloture de caisse /historique du mois /graphes)  -->

        </VerticalStackLayout>
    </Grid>
</ContentView>
