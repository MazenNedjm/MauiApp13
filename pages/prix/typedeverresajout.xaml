                                    <Entry Text="{Binding TeamName}" Placeholder="0.00"  TextColor="White"/>
                                </DataTemplate>
                            </datagride:DataGridColumn.CellTemplate>
                        </datagride:DataGridColumn>
                        <!---#FF0000! G12 -->
